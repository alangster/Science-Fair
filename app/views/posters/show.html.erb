<div class="magnify">
      <!-- This is the magnifying glass which will contain the original/large version -->
      <div class="pic_large">
      </div>

      <!-- This is the small image -->
      <%= image_tag(@poster.filepath, class: "pic_small") %>

</div>

  <!-- Loading prefixfree to handle CSS3 vendor prefixes -->
  <script src="http://thecodeplayer.com/uploads/js/prefixfree.js" type="text/javascript"></script>
  <!-- This can alternatively be downloaded from http://leaverou.github.com/prefixfree/ -->


  <div class="right_side_bar_before">
    <a class="right_side_bar_arrow" style="top: 500">&#8660;</a>
    <!-- <i class="fa fa-arrow-circle-left fa-2x"></i> -->
  </div>

  <div class="right_side_bar_after">
    <a class="right_side_bar_arrow">&#8660;</a>
    <div class="comments_bar">
      <h2>Comments</h2>
      <ul>
        <% @poster.comments.each do |comment| %>
          <li><%= link_to "#{comment.user.name}", user_path(comment.user)%> - <%= comment.text %></li>
          <% if comment.get_all_subcomments != nil %>
            <ul>
              <% comment.get_all_subcomments.each do |c| %>
              <li class="subcomment"><%= link_to "#{c.user.name}", user_path(c.user) %> @<%= c.get_user_responded_to %></br></br><%= c.text %></li></br>
              <% end %>
            </ul>
          <% end %>
        <% end %>
      </ul>
    </div>
    <!-- <i class="fa fa-arrow-circle-left fa-2x fa-rotate-180"></i> -->
  </div>

  <div class="bottom_bar_before">
    <a class="bottom_bar_arrow">&#8661;</a>
    <!-- <i class="fa fa-arrow-circle-left fa-2x fa-rotate-90"></i> -->
  </div>

  <div class="bottom_bar_after">
    <a class="bottom_bar_arrow">&#8661;</a>
    <h2><%= @poster.title %></h2>
    <p><%= @poster.abstract %></p>
    <ul>
      <% @poster.users.each do |user| %>
      <li><%= link_to "#{user.name}", user %></li>
      <% end %>
    </ul>
    <!-- <i class="fa fa-arrow-circle-left fa-2x fa-rotate-270"></i> -->
  </div>

  <div class="poster_info_bar">
  </div>

</div>
