<div class="col-2-12"></div>

<div class="col-8-12 user-edit-container">
	<div class="col-8-12 user-edit-info">
		<% if current_user %>
		<h2 class="user-name">Edit profile for <%= @user.name %></h2></br>
		<% else %>
		<h2 class="user-name">Create an Account</h2></br>
		<ul>
			<% @user.errors.messages.each do |attrib, err_array| %>
	      <% err_array.each do |msg| %>
	      	<li><%= attrib.to_s.capitalize %> <%= msg %></li>
	      <% end %>
    <% end %>
		</ul>
		<% end %>
		<% if current_user %>
			<%= form_for @user, method: "put" do |f| %>
				<%= f.label :profile_pic %>
				<%= f.file_field :profile_pic %>
				<%= f.label :first_name %>
				<%= f.text_field :first_name %>
				<%= f.label :last_name %>
				<%= f.text_field :last_name %>
				<%= f.label :email %>
				<%= f.text_field :email %>
				<%= f.label :password %>
				<%= f.password_field :password %>
				<%= f.label :institution %>
				<%= f.text_field :institution %>

				<%= f.submit %>
			<% end %>
		<% else %>
			<%= form_for @user, method: "post" do |f| %>
				<%= f.label :profile_pic %>
				<%= f.file_field :profile_pic %>
				<%= f.label :first_name %>
				<%= f.text_field :first_name %>
				<%= f.label :last_name %>
				<%= f.text_field :last_name %>
				<%= f.label :email %>
				<%= f.text_field :email %>
				<%= f.label :password %>
				<%= f.password_field :password %>
				<%= f.label :institution %>
				<%= f.text_field :institution %>

				<%= f.submit %>
			<% end %>
		<% end %>
	</div>

	<div class="col-4-12 user-pic">
	</div>
</div>

<div class="col-2-12"></div>
